<%= form_with model: task, url: tasks_path, class: "bg-white shadow rounded-lg p-4 mx-2 lg:mx-0" do |form| %>
  <div class="flex w-full">
    <%= form.text_field :name, placeholder: "Digite o nome da tarefa",
                        class: "border border-gray-500 rounded-lg bg-gray-50 p-2 w-full #{'border-red-600' if task.errors[:name].any?}" %>

    <%= form.submit "Adicionar", class: "bg-green-600 hover:bg-green-800 p-2 rounded-lg font-medium text-white font-lg cursor-pointer ml-4" %>
  </div>

  <% if task.errors.any? %>
    <p class="text-sm pt-1 pl-1 text-red-600"><%= task.errors.full_messages.to_sentence %></p>
  <% end %>
<% end %>
