<%= form_with model: task, url: task_path(task), class: "flex flex-row gap-2 mr-2", data: { turbo_stream: "task_name_frame_#{task.id}", turbo_method: :patch } do |form| %>
  <%= form.text_field :name, placeholder: "Edite o nome da tarefa", class: "border border-gray-400 rounded-lg bg-gray-50 px-2 flex-1 #{'border-red-600' if task.errors[:name].any?}" %>
  <%= form.button type: :submit, class: "p-2 bg-green-600 text-white rounded-lg hover:bg-green-700 w-10 flex justify-center items-center cursor-pointer" do %>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
      <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z" clip-rule="evenodd" />
    </svg>
  <% end %>
  <% if task.errors.any? %>
    <p class="text-sm pt-1 pl-1 text-red-600"><%= task.errors.full_messages.to_sentence %></p>
  <% end %>
<% end %>